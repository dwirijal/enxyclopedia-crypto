source 'https://rubygems.org'

# GitHub Pages gem includes all necessary plugins
gem 'github-pages', group: :jekyll_plugins

# Development gems (not needed on GitHub Pages)
group :development do
  gem 'jekyll', '~> 4.3'
  gem 'kramdown', '~> 2.4'
  gem 'rouge', '~> 4.2'
  gem 'jekyll-watch'
  gem 'jekyll-default-layout'
end
